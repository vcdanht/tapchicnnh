@inherits DotNetNuke.Web.Mvc.Framework.DnnWebViewPage<IEnumerable<Tapchi.Modules.TapchiDataModel.Models.DanhMuc>>

@using System.Text.RegularExpressions
@using DotNetNuke.Web.Mvc.Helpers


<div id="Items-@Dnn.ModuleContext.ModuleId">
    @if (Model.Count() == 0)
    {
        <p>@Dnn.LocalizeString("NoItems")</p>
    }
    else
    {
        <div class="danhmuc-cover">
            <div class="danhmuc-image-cover">
                <a href="@Url.Content("~/Chuyen-muc/id/")@ViewBag.FirstItem.DanhMucID"><img id="danhmuc-image" src="@Tapchi.Modules.TapchiDataModel.Helpers.FileUploadHelper.GetContentUrl(ViewBag.FirstItem.AnhBia)" width="90%" /></a>
            </div>
            <div>
                TẠP CHÍ ĐÃ XUẤT BẢN
            </div>
        </div>
        <div class="danhmuc-year">
            <div data-param="prev" class="danhmuc-year-prev"><a href="javascript:void(0)" class="fa fa-angle-left"></a></div>
            <div class="danhmuc-year-middle">@ViewBag.DanhMucCha.Ten</div>
            <div data-param="next" class="danhmuc-year-next"><a href="javascript:void(0)" class="fa fa-angle-right"></a></div>
            
        </div>

        <div class="clear"></div>
        <div class="danhmuc-calendar">
            
            @foreach (var item in Model)
            {
                <div>
                    <div class="danhmuc-calendar-item" data-param="@Tapchi.Modules.TapchiDataModel.Helpers.FileUploadHelper.GetContentUrl(item.AnhBia)">
                            <a href="@Url.Content("~/Chuyen-muc/id/")@item.DanhMucID">
                                <span><b>@item.GetTrimTen()</b></span>
                                <span>@item.GetTrimMoTa()</span>
                            </a>
                    </div>
                </div>
            }
            @for (var i = 0; i < 12 - Model.Count(); i++)
            {
                <div>
                    
                </div>
            }
        </div>
        <div class="clear"></div>
    }
</div>
<script type="text/javascript">

    /*globals jQuery, window, Sys */
    (function ($, Sys) {
        $(function () {

            $(".danhmuc-calendar-item").hover(function () {
                $("#danhmuc-image").attr("src", $(this).data("param"));
            });
            
        });



    }(jQuery, window.Sys));
</script>